# 1
def max(num1, num2, num3):
    if(num1>num2):
        if(num1>num3):
            return num1
        else:
            return num3
    else:
        if(num2>num3):
            return num2
        else:
            return num3
m = max(13, 67, 99)
print("The value of the max is " + str(m))

# 2
def farch(cel):
    return(cel*(9/5)) + 32

c = 32
f = farch(c)
print("Fahreheit Temp is " + str(f))


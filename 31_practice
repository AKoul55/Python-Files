# 4 
n = 3
for i in range(n):
    print("*" * (n-i))

# 5
def remove_and_split(string, word):
    newStr = string.replace(word, "")
    return newStr.strip()

this = "  AK is a good  "
n = remove_and_split(this, "AK")
print(n)
